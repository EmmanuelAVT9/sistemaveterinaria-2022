}
.show--n6{
    --image-url: url(/images/pexels-mikhail-nilov-7470755.jpg);
}

.show__close{
    background: crimson;
    color: #fff;
    text-decoration: none;
    font-size: 2rem;
    width: 50px;
    height: 50px;
    display: block;
    text-align: center;
    line-height: 50px;
    position: absolute;
    right: 0;
    top: -20px;
    right: -20px;
    border-radius: 50%;
}

@media screen and (max-width:400px){
    .gallery{
        grid-template-columns: 1fr;
    }

    .show__close{
        right: -10px;
    }
}
