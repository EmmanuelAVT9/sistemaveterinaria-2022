<div class="row">
  <div class="col s12 m10 offset-m1 l8 offset-l2">
    <div class="card">
      <div class="card-image">
        <img src="/images/gray-puppy-vet.jpg" alt="blue print image" />
        <span class="card-title">
          Registrar Cita
        </span>
      </div>
      <form autocomplete="off" action="/projects/add" method="POST">
        <div class="card-content">
          <div class="input-field">
            <label for="project-name">
              Nombre del Dueño
            </label>
            <input
              placeholder="Ingrese el nombre del Dueño"
              type="text"
              id="project-name"
              name="name"
              class="validate"
              value="{{project.name}}"
              required
            />
            <span 
              class="helper-text" 
              data-error="Debe ingresar nombre del Dueño"
              data-success="Correcto"></span>
            {{#if errorModel.nameError}}
            <span style="color: red">Error: {{errorModel.nameError}}</span>
            {{/if}}
          </div>
          <div class="input-field">
            <label for="project-name">
              Fecha de Cita
            </label>
            <input
              placeholder="Ingrese el nombre del Dueño"
              type="date"
              id="cita-fecha"
              name="citafecha"
              class="validate"
              value="{{project.citafecha}}"
              required
            />
            <span 
              class="helper-text" 
              data-error="Debe ingresar fecha de cita"
              data-success="Correcto"></span>
            {{#if errorModel.nameError}}
            <span style="color: red">Error: {{errorModel.nameError}}</span>
            {{/if}}
          </div>
          <div class="input-field">
            <label for="project-description">
              Síntomas Mascota
            </label>
            <textarea
              name="description"
              id="project-description"
              class="materialize-textarea"
            ></textarea>
          </div>
        </div>
        <div class="card-action">
          <button
            type="submit"
            class="blue darken-3 waves-effect waves-light btn"
          >
            <i class="material-icons left">
              save
            </i>
            Registrar Cita
          </button>
        </div>
      </form>
    </div>
  </div>
</div>